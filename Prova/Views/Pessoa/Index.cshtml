@model List<Prova.Models.Pessoa>

<h2>Pessoas Cadastradas</h2>

<a asp-action="Form" class="btn btn-primary">Adicionar Pessoa</a>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Data de Nascimento</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pessoa in Model)
        {
            <tr>
                <td>@pessoa.Nome</td>
                <td>@pessoa.DataDeNascimento.ToShortDateString()</td>
                <td>@pessoa.Email</td>
                <td>@pessoa.Telefone</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@pessoa.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
